<%- include('header.ejs')  %> 

    <div class="container my-5 py-5">
        <div class="col-md-5 m-auto text-center">
            <form action="/handleSignin" method="POST">
                <div class="form-group">
                    <input value="<%= oldinput?oldinput:'' %> " placeholder="Enter email" name="email" type="email" class="form-control" />
                </div>
                <div class="form-group">
                    <input placeholder="Password" name="password" type="password" class="form-control" />
                </div>
                <button type="submit" class="btn btn-info w-100">SignIn</button>
            </form>

                <% if (passMass[0]) { %>
                    <div class="alert alert-primary" role="alert">
                        <strong><%= passMass %> </strong>
                    </div>
                <% } %>

                
                <% if (emailMass[0]) { %>
                    <div class="alert alert-primary" role="alert">
                        <strong><%= emailMass %> </strong>
                    </div>
                <% } %>



        </div>
    </div>
    <%- include('footer.ejs')  %> 
