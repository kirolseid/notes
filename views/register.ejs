<%- include('header.ejs')  %> 

    <div class="container my-5 py-5">
        <div class="col-md-5 m-auto text-center">
            <form action="/handleSignUp" method="POST">
                <div class="form-group">
                    <input value="<%=oldinputs?oldinputs.name:''%>" placeholder="Enter your name" name="name" type="text" class=" form-control" />
                    <% if (errors.find(e=>e.param=='name')) { %>
                        <div class="alert alert-warning " role="alert">
                            name not valid
                        </div>
                    <% } %>
                </div>
                <div class="form-group">
                    <input value="<%=oldinputs?oldinputs.email:''%>" placeholder="Enter email" type="email" name="email" class="form-control" />
                    <% if (errors.find(e=>e.param=='email')) { %>
                        <div class="alert alert-warning" role="alert">
                            Email not valid
                        </div>
                    <% } %>
                </div>
                <div class="form-group">
                    <input value="<%=oldinputs?oldinputs.password:''%>" placeholder="Enter you password" type="password" name="password" class="form-control" />
                    <% if (errors.find(e=>e.param=='password')) { %>
                        <div class="alert alert-warning " role="alert">
                            password must be minLength: 8, minLowercase: 1, minUppercase: 1, minNumbers: 1, minSymbols: 1
                        </div>
                    <% } %>
                </div>
                <div class="form-group">
                    <input placeholder="confirm Password" type="password" name="confirmPassword" class="form-control" />
                    <% if (errors.find(e=>e.param=='confirmPassword')) { %>
                        <div class="alert alert-warning " role="alert">
                            confirm Password not equel password
                        </div>
                    <% } %>
                </div>
                <button type="submit" class="btn btn-info w-100">SignUp</button>
            </form>
        </div>

        <% if (mass[0]) { %>
            <div class="alert alert-primary text-center my-5" role="alert">
                <strong><%=mass %> </strong>
            </div>
        <% } %>
            

    </div>

    <%- include('footer.ejs')  %> 

